@model ZeroHunger.DTOs.EmployeeDTO

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>My Profile</h2>

    <div class="row">
        <div class="col-md-6">
            <dl class="dl-horizontal">
                <dt>Name:</dt>
                <dd>@Model.Name</dd>
                <dt>Phone:</dt>
                <dd>@Model.Phone</dd>
                <dt>Email:</dt>
                <dd>@Model.Email</dd>
            </dl>
        </div>
    </div>

    @if (ViewBag.msg != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.msg
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Edit Profile", "ProfileEdit", "Employees", null, new { @class = "btn btn-primary" })
            <a href="@Url.Action("LogOut", "Employees")" class="btn btn-danger">Log Out</a>
        </div>
    </div>
</div>
