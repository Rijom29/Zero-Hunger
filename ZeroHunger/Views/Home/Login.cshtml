@model ZeroHunger.Models.Login

@{
    ViewBag.Title = "Login";
}

<div class="container login-container d-flex align-items-center justify-content-center">
    <div class="col-md-4 text-center">
        <!-- Added text-center class here -->
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "needs-validation" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.UserName, new { @class = "form-label" })
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.Password, new { @class = "form-label" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary mt-3">Login</button>
        }

        @if (ViewBag.Msg != null)
        {
            <p class="text-danger mt-3">@ViewBag.Msg</p>
        }

        <p class="mt-3">Don't have an account? <a href="@Url.Action("SignUp", "Home")">Sign up here</a></p>
    </div>
</div>

<style>
    .login-container {
        background-color: #f2f2f2;
        padding: 20px;
        border-radius: 10px;
        height: 100vh;
    }
</style>
